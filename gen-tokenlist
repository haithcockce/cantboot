cd breaks
echo * | fold -sw60 | column -t >../token-ls
for f in *; do
    grep -q '^# Description:' "${f}" &&
        printf "â–ª "
        grep -H '^# Description:' "${f}" | cut -d: -f1,3-
done >../token-ll