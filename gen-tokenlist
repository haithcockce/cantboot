cd breaks
echo * | fold -sw60 | column -t >../tokens-ls
for f in *; do
    printf "â–ª ${f} :"
    if grep -q '^# Description:' "${f}"; then
        grep '^# Description:' "${f}" | cut -d: -f2-
    else
        echo
    fi
done >../tokens-ll